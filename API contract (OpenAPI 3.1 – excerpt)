openapi: 3.1.0
info:
  title: PlayStake API
  version: 0.1.0
servers:
  - url: https://api.playstake.dev
paths:
  /auth/register:
    post:
      summary: Email/password registration
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              required: [email, password]
              properties:
                email: { type: string, format: email }
                password: { type: string, minLength: 10 }
      responses:
        "201": { description: Registered }
        "409": { description: Email exists }
  /auth/login:
    post:
      summary: Login and issue tokens
      responses:
        "200":
          description: OK
          content:
            application/json:
              schema:
                type: object
                properties:
                  accessToken: { type: string }
                  refreshToken: { type: string }
  /wallets:
    get:
      summary: Get current user wallet(s)
      responses: { "200": { description: OK } }
  /bets:
    post:
      summary: Place a bet
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              required: [marketId, stake]
              properties:
                marketId: { type: string }
                stake:    { type: number, minimum: 0.5 }
      responses:
        "201": { description: Bet accepted }
        "422": { description: Limits/exposure violation }
